<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout.RelativeLayoutActivity">


    <TextView
        android:id="@+id/signUpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/moongia"
        android:layout_below="@id/signUpTV"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


    <TextView
        android:id="@+id/mail_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your mail:"
        android:layout_marginTop="40dp"
        android:layout_below="@id/viewDivider"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/mail_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_label"
        android:layout_marginStart="20dp"
        android:hint="mail"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail"
        android:layout_alignEnd="@id/mail_ET"
        android:layout_alignBottom="@id/mail_ET"
        android:layout_marginBottom="12dp"
        />




    <TextView
        android:id="@+id/password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your password:"
        android:layout_marginTop="40dp"
        android:layout_below="@id/mail_ET"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/password_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_label"
        android:layout_marginStart="20dp"
        android:hint="password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:layout_marginEnd="20dp"
        />


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_password"
        android:layout_alignEnd="@id/mail_ET"
        android:layout_alignBottom="@id/password_ET"
        android:layout_marginBottom="12dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_ET"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_weight="1"
            android:backgroundTint="@color/moongia"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="2dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_weight="2"
            android:backgroundTint="@color/moongia"
            />

    </LinearLayout>

</RelativeLayout>